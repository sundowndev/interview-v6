{
  "name": "interview-v6",
  "version": "1.0.0",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "start": "npm run lint && npm run build && npm run test",
    "lint": "tslint --project tsconfig.json 'packages/*/src/**/*.ts' -e '**/*.d.ts'",
    "test": "NODE_ENV=test jest --config jest.config.js --useStderr --forceExit --detectOpenHandles --coverage",
    "build": "tsc",
    "build:watch": "tsc -w",
    "serve": "node build/index.js",
    "serve:watch": "nodemon build/index.js",
    "serve:debug": "nodemon --inspect build/index.js",
    "debug": "npm run build && npm run serve:debug",
    "apidoc": "apidoc -i src/routes -o ./docs -f '.*\\.ts$'",
    "clean": "rm -rf build",
    "clean:all": "rm -rf node_modules build"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "class-validator": "^0.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-validator": "^6.1.1",
    "lusca": "^1.6.1",
    "mongodb": "^3.3.0",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.0",
    "@types/express-flash": "0.0.0",
    "@types/jest": "^24.0.18",
    "@types/lusca": "^1.6.0",
    "@types/mongodb": "^3.1.28",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.7.1",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.3.9",
    "apidoc": "^0.17.7",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  }
}
